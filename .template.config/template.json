{
  "$schema": "http://json.schemastore.org/template",
  "author": "Theo Delvas JÃ¡tiva",
  "repository": {
    "url": "https://github.com/theodj97/CleanWebApiTemplate",
    "type": "GitHub"
  },
  "classifications": [
    "WebApi",
    "ASP.NET Core",
    "CleanArchitecture",
    "Result Pattern",
    "REPR Pattern",
    "Minimal API",
    "Testing"
  ],
  "identity": "CleanWebApiTemplate",
  "name": "Minimal WebApi Template CA",
  "description": "Dotnet10 minimal WebApi Template with clean architecture focused based on microservices implementations",
  "shortName": "CleanWebApiTemplate",
  "sourceName": "CleanWebApiTemplate",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "preferNameDirectory": true,
  "symbols": {
    "ApiHealthCheck": {
      "type": "parameter",
      "description": "Add Api HealthCheck endpoint",
      "datatype": "bool",
      "defaultValue": "true"
    },
    "DataBase": {
      "type": "parameter",
      "description": "Select the DB to consume in your project",
      "datatype": "choice",
      "choices": [
        {
          "choice": "SQLServer"
        },
        {
          "choice": "MongoDB"
        }
      ],
      "defaultValue": "SQLServer"
    },
    "IsSQLServer": {
      "type": "computed",
      "value": "(DataBase == \"SQLServer\")"
    },
    "IsMongoDB": {
      "type": "computed",
      "value": "(DataBase == \"MongoDB\")"
    },
    "ApplicationHttspUrl": {
      "type": "parameter",
      "datatype": "text",
      "description": "Specify the app SSL URL, by default https://localhost:5001",
      "replaces": "{ApplicationHttpUrl}",
      "defaultValue": "https://localhost:5001"
    },
    "ApplicationHttpUrl": {
      "type": "parameter",
      "datatype": "text",
      "description": "Specify the app URL, by default http://localhost:5000",
      "replaces": "{ApplicationHttpUrl}",
      "defaultValue": "http://localhost:5000"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "exclude": [
            ".git/**",
            ".gitignore",
            ".vs/**",
            "README.md"
          ]
        },
        {
          "condition": "IsSQLServer",
          "exclude": [
            ""
          ]
        },
        {
          "condition": "IsMongoDB",
          "exclude": [
            ""
          ]
        }
      ]
    }
  ]
}